#include "libft.h"

void	*memcpy(void *dst, const void *src, int c, size_t n)
{
	int i;
	char *d;
	char *s;


	d = (char *)dst;
	s = (char *)src;
	i = 0;
	if (d && s)
	{
		while (i < n && s[i] != c)
		{
			d[i] = s[i];
			i++;
		}
		return (dst);
	}
	return (NULL);
}
