#include "libft.h"

void ft_lstdel(t_list **alst, void (*del)(void *, size_t))
{
	t_list *tmp;

	if (!alst || !del)
		return ;
	while (**alst)
	{
		tmp = (*alst)->next;
		del((*alst)->content, (*alst)->content-size);
		free(*alst);
		*alst = tmp;
	}
	*alst = NULL;
}
